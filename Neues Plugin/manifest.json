{
	"name": "CommentSense",
	"description": "CommentSense",
	"version": "0.1",
	"manifest_version": 2,
	"permissions": [
		"storage",
		"tabs",
		"activeTab"
	],
	"icons": {
		"32": "/assets/icons/icon.png"
	},
	"browser_action": {
		"default_popup": "HTML/popup/popup.html",
		"default_title": "CommentSense"
	},
	"options_ui": {
		"page": "HTML/options/options.html",
		"open_in_tab": false
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"JS/backend/backend.js"
			]
		}
	]
}