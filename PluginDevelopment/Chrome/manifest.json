{
  "name": "Hello World!",
  "description": "My first Chrome App.",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "privacy",
    "tabs",
    "activeTab"
    ],
  "icons": { "32": "./assets/icons/like.svg"},
  "browser_action": {
    "default_icon": "./assets/icons/like.svg",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "popup.js",
        "backend.js"
      ]
    }
  ]
}
